{% extends 'base.html.twig' %}

{% block title %}Sessions index{% endblock %}

{% block body %}
    <h1>Sessions index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>ExercicesNumber</th>
                <th>SessionTime</th>
                <th>SessionDate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for session in sessions %}
            <tr>
                <td>{{ session.id }}</td>
                <td>{{ session.exercicesNumber }}</td>
                <td>{{ session.sessionTime }}</td>
                <td>{{ session.sessionDate ? session.sessionDate|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_sessions_show', {'id': session.id}) }}">show</a>
                    <a href="{{ path('app_sessions_edit', {'id': session.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_sessions_new') }}">Create new</a>
{% endblock %}
